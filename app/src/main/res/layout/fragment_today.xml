<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TodayFragment">


    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <SearchView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="2dp"
            android:layout_weight="100"
            android:background="@drawable/searchbar"
            android:paddingLeft="10dp"
            android:queryHint="@string/search" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl1"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="100">

        <ImageView
            android:id="@+id/loc"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/location" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/comfortaa_bold"
            android:padding="3dp"
            android:text="Beirut, Lebanon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl2"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="100">

        <ImageView
            android:id="@+id/Icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/weathericon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl3"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Fri, 31 December"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl4"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/comfortaa"
            android:text="11Â°C"
            android:textSize="50dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl5"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Sunny"
            android:textSize="20dp" />
    </LinearLayout>

    //Split

    <LinearLayout
        android:id="@+id/rl7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl6"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="100">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center_horizontal|center_vertical"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hum"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/humidity" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/comfortaa_bold"
                    android:padding="3dp"
                    android:text="Hum:" />

                <TextView
                    android:id="@+id/humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/comfortaa_bold"
                    android:padding="3dp"
                    android:text="71%" />
            </LinearLayout>

            <!-- Right side spacer -->

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0"></View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center_horizontal|center_vertical"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/vis"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/visibility" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/comfortaa_bold"
                    android:padding="3dp"
                    android:text="Vis:" />

                <TextView
                    android:id="@+id/visibility"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/comfortaa_bold"
                    android:padding="3dp"
                    android:text="800 m" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    //Split 2

    <LinearLayout
        android:id="@+id/rl8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl7"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="100">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center_horizontal|center_vertical"

                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/win"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/wind" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/comfortaa_bold"
                    android:padding="3dp"
                    android:text="Speed:" />

                <TextView
                    android:id="@+id/windspeed"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/comfortaa_bold"
                    android:padding="3dp"
                    android:text="13 Km/h" />
            </LinearLayout>

            <!-- Right side spacer -->

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0"></View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"

                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/pres"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/pressure" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/comfortaa_bold"
                    android:padding="3dp"
                    android:text="Prs:" />

                <TextView
                    android:id="@+id/pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/comfortaa_bold"
                    android:padding="3dp"
                    android:text="80 Pa" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    //Split 3

    <LinearLayout
        android:id="@+id/rl9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl8"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:weightSum="100">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"

                android:padding="5dp">

                <ImageView
                    android:id="@+id/sunr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/sunrise" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/sunup"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/comfortaa_bold"
                        android:gravity="center"
                        android:text="Sunrise: " />


                    <TextView
                        android:id="@+id/sunrise"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/comfortaa_bold"
                        android:gravity="center"
                        android:text="5:03 AM" />
                </LinearLayout>


            </LinearLayout>

            <!-- Right side spacer -->

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0"></View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/suns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/sunset" />


                <TextView
                    android:id="@+id/sundown"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/comfortaa_bold"
                    android:gravity="center"
                    android:text="Sunset: " />


                <TextView
                    android:id="@+id/sunset"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/comfortaa_bold"
                    android:gravity="center"
                    android:text="5:35 PM" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="232dp"
        android:layout_height="119dp"
        android:text="TextView" />


</RelativeLayout>